<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trabalhosistemasdistribuidos.CandidatoController">
    <center>
        <VBox prefHeight="0.0" prefWidth="600.0" stylesheets="@../../../estilos/LabelTextField.css" BorderPane.alignment="CENTER">
            <children>
                <Label prefHeight="27.0" prefWidth="65.0" styleClass="label-modern" text="E-mail">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <TextField fx:id="login" prefHeight="30.0" prefWidth="517.0" promptText="E-mail do candidato" styleClass="text-field-modern" />
                <Label prefHeight="27.0" prefWidth="77.0" styleClass="label-modern" text="Senha">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="senha" prefHeight="30.0" promptText="Senha do candidato" styleClass="text-field-modern" />
                <Label prefHeight="27.0" prefWidth="125.0" styleClass="label-modern" text="Nome">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="nome" prefHeight="30.0" prefWidth="517.0" promptText="Nome do candidato" styleClass="text-field-modern" />
            <HBox prefHeight="39.0" prefWidth="570.0" spacing="10.0">
               <opaqueInsets>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </opaqueInsets>
               <children>
                  <Label fx:id="excecao" text="Label" visible="false" />
               </children>
            </HBox>
            </children>
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="92.0" prefWidth="900.0" spacing="25.0" stylesheets="@../../../estilos/LabelTextField.css" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="dados" mnemonicParsing="false" onAction="#carregar" styleClass="button-buscar" text="BUSCAR" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnAlterar" alignment="CENTER" mnemonicParsing="false" onAction="#alterar" prefHeight="50.0" prefWidth="150.0" styleClass="button-alterar" text="ALTERAR" textAlignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#excluir" prefHeight="50.0" prefWidth="150.0" styleClass="button-excluir" text="EXCLUIR" textAlignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            </children>
        </HBox>
    </bottom>
   <left>
      <HBox prefHeight="100.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
